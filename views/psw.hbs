<div class="headline">
    {{#if loggedIn}}
        Hej {{username}}!
    {{else}}
        Vad gör du här???
    {{/if}}
    <!-- WTF??? -->
</div>
<div class="register-form">
    <form action="/users/psw" method="post">
        <input type="text" name="email" placeholder="Email" class="form-input" required>
        <br>
        <input type="text" name="username" placeholder="username" class="form-input" required>
        <br>
        <input type="password" name="password" placeholder="Nytt Lösenord" class="form-input" required>
        <br>
        <button type="submit" class="form-submit">Ändra lösenord</button>
    </form>
</div>
